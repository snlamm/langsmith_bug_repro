{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // Set the base directory for non-relative module names
    "paths": {
      "@models/*": ["src/models/*"], // Resolve imports like '@models/example' to 'src/models/example'
      "@utils/*": ["src/utils/*"] // Resolve imports like '@utils/example' to 'src/utils/example'
    },
    "outDir": "./dist", // Specify the output directory for the compiled JavaScript files
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
